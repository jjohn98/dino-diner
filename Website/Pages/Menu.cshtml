@page
@using DinoDiner.Menu
@model Website.Pages.MenuModel
@{
    ViewData["Title"] = "Menu";
}

<h1>Menu</h1>


<h2>Combos</h2>
@foreach (IMenuItem item in Model.menu.AvailableCombos)
{
<div class="menu-item">
    @item.ToString()
    <div class="price-display">Price: @item.Price, Calories: @item.Calories</div>
    @foreach (string ingredient in item.Ingredients)
    {
        <div>@ingredient</div>
    }
</div>
}


