@page
@using DinoDiner.Menu
@model Website.Pages.MenuModel
@{
    ViewData["Title"] = "Menu";
}

<h1>Menu</h1>

<div class="menudisplay">
    <div class="itemdisplay">
        <h2>Combos</h2>
        @foreach (IMenuItem item in Model.combos)
        {
        <div class="menu-item">
            @item.ToString()
            <div class="price-display">Price: @item.Price, Calories: @item.Calories</div>
            <ul>
            @foreach (string ingredient in item.Ingredients)
            {
                <li>@ingredient</li>
            }
            </ul>
        </div>
        }


        <h2>Entrees</h2>
        @foreach (IMenuItem item in Model.entrees)
        {
    <div class="menu-item">
        @item.ToString()
        <div class="price-display">Price: @item.Price, Calories: @item.Calories</div>
        <ul>
            @foreach (string ingredient in item.Ingredients)
            {
                <li>@ingredient</li>
            }
        </ul>
    </div>
        }


        <h2>Sides</h2>
        @foreach (IMenuItem item in Model.sides)
        {
    <div class="menu-item">
        @item.ToString()
        <div class="price-display">Price: @item.Price, Calories: @item.Calories</div>
        <ul>
            @foreach (string ingredient in item.Ingredients)
            {
                <li>@ingredient</li>
            }
        </ul>
    </div>
        }


        <h2>Drinks</h2>
        @foreach (IMenuItem item in Model.drinks)
        {
    <div class="menu-item">
        @item.ToString()
        <div class="price-display">Price: @item.Price, Calories: @item.Calories</div>
        <ul>
            @foreach (string ingredient in item.Ingredients)
            {
                <li>@ingredient</li>
            }
        </ul>
    </div>
        }
    </div>

    <form method="post">
        <input id="search" name="search" type="text" value="@Model.search">
        <input type="submit" value="Search">
        <input type="submit" value="Apply Filter(s)">
        <div class="checkbox-list">
            <h3>Filter by Type</h3>
            <label>
                <input type="checkbox" value="Combo" name="menuCategory"
                       checked="@Model.menuCategory.Contains("Combo")" />
                Combo
            </label>
            <label>
                <input type="checkbox" value="Entree" name="menuCategory"
                       checked="@Model.menuCategory.Contains("Entree")" />
                Entree
            </label>
            <label>
                <input type="checkbox" value="Side" name="menuCategory"
                       checked="@Model.menuCategory.Contains("Side")" />
                Side
            </label>
            <label>
                <input type="checkbox" value="Drink" name="menuCategory"
                       checked="@Model.menuCategory.Contains("Drink")" />
                Drink
            </label>
        </div>

        <h4>Filter By Price </h4>
            <label>
                Min
                <input type="number" min="0" max="15" step="0.01" name="minPrice" value="@Model.minPrice">
            </label>
            <label>
                Max
                <input type="number" min="0" max="15" step="0.01" name="maxPrice" value="@Model.maxPrice">
            </label>
        

        <h5 class="checkbox-list">
            Excluding Ingredients:
            @foreach (var ingredient in Model.menu.PossibleIngredients)
                {
            <label>
                <input type="checkbox" class="exclude-ingredient" value="@ingredient" name="excludedIngredients"
                       checked="@Model.excludedIngredients.Contains(ingredient)" />
                @ingredient
            </label>
                }
        </h5>
    </form>
</div>
