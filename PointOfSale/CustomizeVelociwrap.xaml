<Page x:Class="PointOfSale.CustomizeVelociwrap"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PointOfSale"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CustomizeVelociwrap">

    <Page.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="Yellow" Offset="0.0" />
            <GradientStop Color="Red" Offset="0.25" />
            <GradientStop Color="Blue" Offset="0.75" />
            <GradientStop Color="LimeGreen" Offset="1.0" />
        </LinearGradientBrush>
    </Page.Background>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Name="HoldTortillaButton" Click="HoldTortillaButton_Click" Background="SandyBrown" Grid.Row="1">
            <TextBlock Text="Hold Tortilla" FontWeight="Bold"/>
        </Button>
        <Button Name="HoldLettuceButton" Click="HoldLettuceButton_Click" Background="SandyBrown" Grid.Row="1" Grid.Column="1">
            <TextBlock Text="Hold Romaine Lettuce" FontWeight="Bold"/>
        </Button>
        <Button Name="HoldCheeseButton" Click="HoldCheeseButton_Click" Background="SandyBrown" Grid.Row="1" Grid.Column="2">
            <TextBlock Text="Hold Parmesan Cheese" FontWeight="Bold"/>
        </Button>
        <Button Name="HoldDressingButton" Click="HoldDressingButton_Click" Background="SandyBrown" Grid.Row="0" Grid.Column="1">
            <TextBlock Text="Hold Caesar Dressing" FontWeight="Bold"/>
        </Button>
        <Button Name="DoneButton" Click="DoneButton_Click" Background="Red" Grid.Row="2" Grid.Column="1">
            <TextBlock Text="Done" FontWeight="Bold" FontSize="20"/>
        </Button>
        <TextBlock Text="Customize Veloci-Wrap" Grid.Column="2" Grid.Row="2" FontWeight="Bold" FontSize="24" TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Page>
