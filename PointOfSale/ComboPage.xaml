<Page x:Class="PointOfSale.ComboPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PointOfSale"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ComboPage">

        <WrapPanel>
        <WrapPanel.Resources>
            <Style TargetType="Button">
                <Setter Property="Width" Value="200"/>
                <Setter Property="Height" Value="200"/>
            </Style>
        </WrapPanel.Resources>
        <Button Click="BrontowurstCombo_Click">Brontowurst Combo</Button>
        <Button Click="Button_Click">Dino-Nuggets Combo</Button>
        <Button Click="Button_Click_1">Steakosaurus Combo</Button>
        <Button Click="Button_Click_2">T-Rex King Burger Combo</Button>
        <Button Click="Button_Click_3">Prehistoric PB&amp;J Combo</Button>
        <Button Click="Button_Click_4">Pterodactyl Wings Combo</Button>
        <Button Click="Button_Click_5">Veloci-Wrap Combo</Button>
    </WrapPanel>
</Page>
